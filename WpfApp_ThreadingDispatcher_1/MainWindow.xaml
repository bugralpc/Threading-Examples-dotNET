<Window x:Class="WpfApp_ThreadingDispatcher_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_ThreadingDispatcher_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <GroupBox Header="Method 1">
                <StackPanel>
                    <TextBox Name="textBox1" IsReadOnly="True"></TextBox>
                    <Button Name="button1" Content="Click 1" Click="Button1Click" Height="20"></Button>
                    <ProgressBar Name="progressBar1" Height="20"></ProgressBar>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Method 2">
                <StackPanel>
                    <TextBox Name="textBox2" IsReadOnly="True"></TextBox>
                    <Button Name="button2" Content="Click 2" Click="Button2Click" Height="20"></Button>
                    <ProgressBar Name="progressBar2" Height="20"></ProgressBar>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
    </Grid>
</Window>
