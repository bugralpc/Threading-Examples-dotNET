<Window x:Class="WpfApp_BackgroundWorkerClass_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_BackgroundWorkerClass_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Direct Access to UI element from BackgroundWorker">
                <StackPanel>
                    <ProgressBar Name="progressBar1" Minimum="0" Maximum="100" Height="20"></ProgressBar>
                    <Button Content="Start" Click="StartButton1Click"></Button>
                    <Button Content="Cancel" Click="CancelButton1Click"></Button>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Data-Binding access to UI element from BackgroundWorker">
                <StackPanel>
                    <ProgressBar Name="progressBar2" Minimum="0" Maximum="100" Height="20"></ProgressBar>
                    <Button Content="Start" Click="StartButton2Click"></Button>
                    <Button Content="Cancel" Click="CancelButton2Click"></Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
