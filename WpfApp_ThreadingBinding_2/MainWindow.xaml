<Window x:Class="WpfApp_ThreadingBinding_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_ThreadingBinding_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ProgressBar Name="progressBar1" Height="20" Minimum="0" Maximum="100"></ProgressBar>
            <Button Content="Progres by Click" Click="ProgressClick"></Button>
            <Button Content="Progres by Click 2" Click="ProgressClick2"></Button>
            <Button Content="Progres by New Thread" Click="ProgressThreadClick"></Button>
            <Button Content="Debug" Click="DebugClick"></Button>
        </StackPanel>
    </Grid>
</Window>
